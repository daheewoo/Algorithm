class Solution {
  public String solution(String phone_number) {
      String answer = "";
      String star = "****************";      
      String starAnswer;
      String numberAnswer;
      
      starAnswer = star.substring(0, phone_number.length()-4);
      numberAnswer = phone_number.substring(phone_number.length()-4);
      
      answer = starAnswer.concat(numberAnswer);
      
      return answer;
      
  }
}
