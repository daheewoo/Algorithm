class Solution {
    public int[] solution(int brown, int yellow) {
        int[] answer = {};
        int carpetLen = brown + yellow;

        for(int i=1; i<= carpetLen; i++){
            if(carpetLen%i == 0){
                //전체 직사각형
                int col = carpetLen / i;    
                int row = carpetLen / col; 

                //노란색 직사각형
                int yCol = col - 2;
                int yRow = row - 2;

                if(yCol*yRow == yellow && col >= row){
                    answer = new int[]{col , row};
                }
            }
        }

        return answer;
    }
}
